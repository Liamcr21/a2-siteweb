<article class="mb-5 card">
<div class="card-body">
    <div class="row">
        <div class="col-md-{{ leftCol ?? 5 }} " >
   {% if article.featuredImage %}
    <a href="{{ path('article_show', { 'slug': article.slug }) }}">
        <img src="{{ asset('uploads/' ~ article.featuredImage.filename) }}" alt="{{ article.featuredImage.altText }}" loading="lazy" width="300">
    </a>
{% else %}
    <img src="{{ asset('images/logo-nav.png') }}" alt="Logo par dÃ©faut" loading="lazy" width="300">
{% endif %}


        </div>
        <div class="col-md-{{ rightCol ?? 7 }} pt-3">
        <p>
                Le : {{ article.createdAt }}  </p> 
            <h2 class="article-title">
                <a href="{{ path('article_show', { 'slug': article.slug }) }}" class="text-decoration-none">{{ article.title }}</a>
            </h2>
            
                <p class=" mt-2 mb-2"> {% for category in article.categories %}   <span style="background-color: {{ category.color }}; padding: 5px; color:white;">{{ category.name }}</span> </p>{% endfor %}
            </p>
            <p class="mt-3">{{ article.featuredText ?: '' }}</p>
        </div>
    </div>
    </div>
</article>